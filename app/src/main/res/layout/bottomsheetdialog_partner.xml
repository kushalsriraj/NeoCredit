<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:background="@color/background"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/upload_pdf_partner"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Upload PDF"
                    android:textColor="@color/neopurple"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:src="@drawable/pdficon" />

            </LinearLayout>

            <View
                android:id="@+id/view1_partner"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_margin="20dp"
                android:background="@color/neopurple" />

            <LinearLayout
                android:id="@+id/upload_from_camera_partner"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Upload From Camera"
                    android:textColor="@color/neopurple"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:src="@drawable/camicon" />

            </LinearLayout>

            <View
                android:id="@+id/view2_partner"
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_margin="20dp"
                android:background="@color/neopurple" />

            <LinearLayout
                android:id="@+id/upload_from_gallery_partner"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Upload From Gallery"
                    android:textColor="@color/neopurple"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:src="@drawable/galleryicon" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>