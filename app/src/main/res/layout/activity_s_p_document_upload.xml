                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Valid SLA"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:textColor="@color/black"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <RelativeLayout
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@color/background">

                                <com.crystal.crystalpreloaders.widgets.CrystalPreloader
                                    android:id="@+id/loader_sp_sla"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerInParent="true"
                                    android:visibility="gone"
                                    app:crs_pl_bg_color="#fff"
                                    app:crs_pl_fg_color="@color/neopurple"
                                    app:crs_pl_size="very_small"
                                    app:crs_pl_style="circular" />

                                <ImageView
                                    android:id="@+id/image_sp_sla"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="20dp"
                                    android:src="@drawable/blackcloud" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
